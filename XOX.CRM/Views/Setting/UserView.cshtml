@model CRM.Models.UserModel
@{
    ViewBag.Title = "User View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Title { @ViewBag.Title }
@section scripts{

}

<div id="main_content" class="clearfix form-horizontal view-content">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title"><i class="fa fa-user"></i> <label class="title">User Information</label></h3>
        </div><!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group clearfix">
                        <label class="col-md-4 control-label">@Html.LabelFor(model => model.Username)</label>
                        <div class="col-md-8 text-offset">
                            @Model.Username
                        </div>
                    </div>
                    <div class="form-group clearfix">
                        <label class="col-md-4 control-label">@Html.LabelFor(model => model.Password)</label>
                        <div class="col-md-8 text-offset">
                            @Model.Password
                        </div>
                    </div>
                    <div class="form-group clearfix">
                        <label class="col-md-4 control-label">@Html.LabelFor(model => model.StaffName)</label>
                        <div class="col-md-8 text-offset">
                            @if (Model.StaffName == null)
                            {
                                <text>-</text>
                            }
                            else
                            {
                                @Model.StaffName
                            }
                        </div>
                    </div>
                    <div class="form-group clearfix">
                        <label class="col-md-4 control-label">@Html.LabelFor(model => model.UserGroupId)</label>
                        <div class="col-md-8 text-offset">
                            @Model.UserGroupCode
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>