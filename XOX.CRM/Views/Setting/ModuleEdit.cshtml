@model CRM.Models.ModuleModel
@{
    ViewBag.Title = "Module Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Title { @ViewBag.Title }
@section scripts{

}

<div id="main_content" class="clearfix form-horizontal">
    @using (Html.BeginForm("ModuleEdit", "Setting", FormMethod.Post))
    {
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title"><i class="fa fa-file-text"></i> <label class="title">Module Information</label></h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group clearfix">
                            <label class="col-xs-4 control-label">@Html.LabelFor(model => model.ModuleCode)</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.ModuleCode, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="col-md-4 control-label">@Html.LabelFor(model => model.ModuleName)</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.ModuleName, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-7">
                        <div class="form-group clearfix">
                            <label class="col-xs-4 control-label">@Html.LabelFor(model => model.IsViewable)</label>
                            <div class="col-xs-8">
                                @Html.CheckBoxFor(m => m.IsViewable, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="col-xs-4 control-label">@Html.LabelFor(model => model.IsAddable)</label>
                            <div class="col-xs-8">
                                @Html.CheckBoxFor(m => m.IsAddable, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="col-xs-4 control-label">@Html.LabelFor(model => model.IsEditable)</label>
                            <div class="col-xs-8">
                                @Html.CheckBoxFor(m => m.IsEditable, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="col-xs-4 control-label">@Html.LabelFor(model => model.IsDeleteable)</label>
                            <div class="col-xs-8">
                                @Html.CheckBoxFor(m => m.IsDeleteable, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="col-xs-4 control-label">@Html.LabelFor(model => model.IsApprovable)</label>
                            <div class="col-xs-8">
                                @Html.CheckBoxFor(m => m.IsApprovable, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="col-xs-4 control-label">@Html.LabelFor(model => model.IsRejectable)</label>
                            <div class="col-xs-8">
                                @Html.CheckBoxFor(m => m.IsRejectable, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
          
        <div class="content-footer">      
            <div>
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>
    }
</div>